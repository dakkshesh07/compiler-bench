compilers=(
	"r498229"
	"greenforce"
	"zyc"
	"neutron"
	"cosmic"
	"weebx")

neutron() {
	mkdir -p "$HOME/toolchains/neutron"
	cd "$HOME/toolchains/neutron"
	bash <(curl -s https://raw.githubusercontent.com/Neutron-Toolchains/antman/main/antman) -S
	cd -
}

git_repo_clone() {
	git clone ${1} "$HOME/toolchains/${2}" ${3} --depth=1
}

greenforce() {
	git_repo_clone "https://gitlab.com/fadlyas07/clang-llvm.git" "greenforce"
}

zyc() {
	cd "$HOME/toolchains"
	wget "$(curl -s https://raw.githubusercontent.com/ZyCromerZ/Clang/main/Clang-main-link.txt)" -O "zyc-clang.tar.gz"
	mkdir zyc && tar -xf zyc-clang.tar.gz -C zyc && rm -rf zyc-clang.tar.gz
	cd -
}

cosmic() {
	git_repo_clone "https://gitlab.com/GhostMaster69-dev/cosmic-clang.git" "cosmic"
}

weebx() {
	cd "$HOME/toolchains"
	wget "$(curl -s https://raw.githubusercontent.com/XSans0/WeebX-Clang/main/main/link.txt)" -O "weebx-clang.tar.gz"
	mkdir weebx && tar -xf weebx-clang.tar.gz -C weebx && rm -rf weebx-clang.tar.gz
	cd -
}

r498229() {
	git_repo_clone "https://gitlab.com/neilchetty/platform_prebuilts_clang_host_linux-x86_clang.git" "r498229"
}
